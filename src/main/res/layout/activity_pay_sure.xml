<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    android:orientation="vertical">
    <include layout="@layout/white_top_bar"/>
    <TextView style="@style/Text_divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:paddingLeft="@dimen/large_margin"
        android:paddingRight="@dimen/large_margin"
        android:background="@color/background"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/aiply"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/min_margin" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="支付宝"
            android:textSize="@dimen/big_textSize"
            android:textColor="#333333"
            android:gravity="center_vertical" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/big_textSize"
            android:text="担保交易"
            android:textColor="@color/main_grey"
            android:gravity="center"
            android:layout_marginRight="20dp" />
        <ImageView
            android:id="@+id/image_aiply"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circel_unselect"
            android:layout_gravity="center" />
    </LinearLayout>
    <TextView style="@style/Text_divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:paddingLeft="@dimen/large_margin"
        android:paddingRight="@dimen/large_margin"
        android:background="@color/background"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/weichat_pay"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/min_margin" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="微信"
            android:textSize="@dimen/big_textSize"
            android:textColor="#333333"
            android:gravity="center_vertical" />
        <ImageView
            android:id="@+id/image_weichat"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circel_select"
            android:layout_gravity="center" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:paddingLeft="@dimen/large_margin"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="合计：￥789.00"
            android:textSize="@dimen/big_textSize"
            android:textColor="@color/black_color"
            android:layout_marginRight="13dp"
            android:gravity="center" />
        <TextView
            android:id="@+id/good_count"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="共3件商品"
            android:textSize="@dimen/smasll_textSize"
            android:textColor="@color/black_color"
            android:gravity="center_vertical" />
        <TextView
            android:id="@+id/tv_pay_sure"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:background="@color/main_red"
            android:textSize="@dimen/big_textSize"
            android:text="付款"
            android:textColor="@color/white_color"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>
