<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white_color"
    app:cardCornerRadius="1dp"
    app:cardElevation="2dp"
    android:background="@color/white_color"
    android:layout_marginLeft="@dimen/normal_margin"
    android:layout_marginRight="@dimen/normal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_orderNum"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/large_margin"
            android:text="订单编号：201800101486589"
            android:textColor="@color/main_grey"
            android:textSize="@dimen/normal_textSize" />
        <TextView style="@style/Text_divider" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/large_margin"
            android:scrollbars="none" />

        <TextView style="@style/Text_divider"  android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tv_ticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_margin"
            android:gravity="right"
            android:paddingRight="@dimen/large_margin"
            android:text="优惠券：-￥30"
            android:visibility="gone"
            android:textColor="@color/main_grey"
            android:textSize="@dimen/smasll_textSize" />

        <TextView
            android:id="@+id/tv_fei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/large_margin"
            android:layout_marginRight="@dimen/large_margin"
            android:layout_marginTop="@dimen/large_margin"
            android:text="邮费：￥0，合计：￥89"
            android:textColor="@color/black_color"
            android:textSize="@dimen/big_textSize"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linear_order_info"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:paddingRight="@dimen/large_margin">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:background="@drawable/calcel_order_background"
                android:gravity="center"
                android:text="删除订单"
                android:textColor="@color/title_color"
                android:textSize="@dimen/title_textSize" />

            <TextView
                android:id="@+id/tv_cancel_apply"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:background="@drawable/calcel_order_background"
                android:gravity="center"
                android:text="取消申请"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/normal_margin"
                android:textColor="@color/title_color"
                android:textSize="@dimen/title_textSize" />
            <TextView
                android:id="@+id/tv_cancel_order"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:background="@drawable/calcel_order_background"
                android:gravity="center"
                android:text="取消订单"
                android:layout_marginLeft="@dimen/normal_margin"
                android:textColor="@color/title_color"
                android:textSize="@dimen/title_textSize" />
            <TextView
                android:id="@+id/tv_sould_out"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:background="@drawable/calcel_order_background"
                android:gravity="center"
                android:text="申请售后"
                android:layout_marginLeft="@dimen/normal_margin"
                android:textColor="@color/title_color"
                android:textSize="@dimen/title_textSize" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
