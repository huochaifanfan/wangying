<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_color"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_orderStatus"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/main_red"
        android:text="交易完成"
        android:textSize="@dimen/big_textSize"
        android:textColor="@color/white_color"
        android:gravity="center" />
    <RelativeLayout
        android:id="@+id/rel_delviderWay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/large_margin"
        android:layout_marginRight="@dimen/large_margin"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="@drawable/linear_bottom_line_normal">
        <ImageView
            android:id="@+id/image_wuliu"
            android:layout_width="18dp"
            android:layout_height="14dp"
            android:src="@drawable/wuliu"
            android:layout_marginRight="@dimen/normal_margin"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/tv_deliverWay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="配送方式：顺丰快递"
            android:layout_toRightOf="@+id/image_wuliu"
            android:textSize="@dimen/normal_textSize"
            android:textColor="@color/black_color" />
        <TextView
            android:id="@+id/tv_deliverNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快递单号：135164646464"
            android:layout_toRightOf="@+id/image_wuliu"
            android:layout_below="@+id/tv_deliverWay"
            android:textSize="@dimen/normal_textSize"
            android:textColor="@color/black_color"
            android:layout_alignLeft="@+id/tv_deliverWay"
            android:layout_marginTop="@dimen/normal_margin" />
        <TextView
            android:id="@+id/tv_fuzhi"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:background="@drawable/deliver_background"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/tv_deliverNum"
            android:text="复制快递单号"
            android:textSize="@dimen/normal_textSize"
            android:textColor="@color/black_color"
            android:gravity="center" />
    </RelativeLayout>
    <!--地址-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/large_margin"
        android:layout_marginRight="@dimen/large_margin"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">
        <ImageView
            android:id="@+id/image_address"
            android:layout_width="15dp"
            android:layout_height="19dp"
            android:src="@drawable/order_address"
            android:layout_marginRight="@dimen/normal_margin"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="周媛媛"
            android:layout_toRightOf="@+id/image_address"
            android:textSize="@dimen/normal_textSize"
            android:textColor="@color/black_color"
            android:layout_marginRight="17dp"/>
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_name"
            android:textSize="@dimen/normal_textSize"
            android:textColor="@color/black_color"
            android:text="13523654785" />
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京市朝阳区高碑店二区21-36北门"
            android:layout_toRightOf="@+id/image_address"
            android:layout_below="@+id/tv_name"
            android:textSize="@dimen/normal_textSize"
            android:layout_alignLeft="@+id/tv_name"
            android:layout_marginTop="@dimen/normal_margin" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#cccccc"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/large_margin"
        android:background="@color/background"/>
</LinearLayout>
