<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rel_content"
    android:paddingTop="@dimen/large_margin">
    <CheckBox
        android:id="@+id/image_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="@dimen/normal_margin"
        android:layout_alignBottom="@+id/image_icon"
        android:layout_marginBottom="30dp"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:button="@drawable/shop_check_image" />
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="@dimen/normal_margin"
        android:visibility="gone"
        android:src="@drawable/address_unselect"
        android:layout_alignBottom="@+id/image_icon"
        android:layout_marginBottom="30dp"/>
    <ImageView
        android:id="@+id/image_icon"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_toRightOf="@+id/image_select"
        android:layout_marginRight="4dp"/>
    <TextView
        android:id="@+id/tv_goodsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image_icon"
        android:text="商品名称商品名称商品名称"
        android:textSize="@dimen/title_textSize"
        android:textColor="@color/black_color"
        android:lines="1"
        android:layout_marginTop="4dp"
        android:ellipsize="end" />
    <TextView
        android:id="@+id/tv_guige"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="规格：15X15"
        android:textSize="@dimen/smasll_textSize"
        android:lines="1"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/image_icon"
        android:layout_below="@+id/tv_goodsName"
        android:layout_marginTop="@dimen/normal_margin"
        android:textColor="@color/main_grey" />
    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image_icon"
        android:text="￥99.00"
        android:textSize="@dimen/title_textSize"
        android:textColor="@color/main_red"
        android:layout_marginBottom="@dimen/min_margin"
        android:layout_alignBottom="@+id/image_icon" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_marginRight="@dimen/normal_margin"
        android:layout_marginBottom="@dimen/min_margin"
        android:layout_alignBottom="@+id/image_icon">
        <ImageView
            android:id="@+id/image_minus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_jian"
            android:layout_marginRight="8dp" />
        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="@dimen/title_textSize"
            android:textColor="@color/main_grey" />
        <ImageView
            android:id="@+id/image_plus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_jia"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="12dp"/>
        <ImageView
            android:id="@+id/image_delete"
            android:layout_width="14dp"
            android:layout_height="16dp"
            android:src="@drawable/address_delete" />
    </LinearLayout>
</RelativeLayout>
