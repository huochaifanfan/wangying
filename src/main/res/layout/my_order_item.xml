<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_color"
    app:cardBackgroundColor="@color/white_color"
    app:cardCornerRadius="1dp"
    app:cardElevation="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="@dimen/large_margin"
            android:paddingRight="@dimen/large_margin">
            <TextView
                android:id="@+id/tv_orderNum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="订单编号：201800101486589"
                android:gravity="center_vertical"
                android:textSize="@dimen/normal_textSize"
                android:textColor="@color/main_grey" />
            <TextView
                android:id="@+id/order_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="待付款"
                android:textSize="@dimen/normal_textSize"
                android:textColor="@color/main_red"
                android:layout_alignParentRight="true"
                android:gravity="center" />
        </RelativeLayout>
        <TextView style="@style/Text_divider"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/large_margin"
            android:scrollbars="none"/>
        <TextView style="@style/Text_divider" android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/tv_fei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮费：￥0，合计：￥89"
            android:layout_marginTop="@dimen/large_margin"
            android:layout_gravity="right"
            android:textSize="@dimen/big_textSize"
            android:textColor="@color/black_color"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/large_margin"
            android:layout_marginBottom="@dimen/large_margin" />
        <LinearLayout
            android:id="@+id/linear_kefu"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:paddingRight="@dimen/large_margin">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_cancel_order"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:text="取消订单"
                android:textSize="@dimen/title_textSize"
                android:textColor="@color/title_color"
                android:gravity="center"
                android:background="@drawable/calcel_order_background" />
            <TextView
                android:id="@+id/tv_cancel_apply"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:text="取消申请"
                android:textSize="@dimen/title_textSize"
                android:textColor="@color/title_color"
                android:gravity="center"
                android:layout_marginLeft="@dimen/normal_margin"
                android:background="@drawable/calcel_order_background" />
            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:text="确认收货"
                android:textSize="@dimen/title_textSize"
                android:textColor="@color/title_color"
                android:gravity="center"
                android:layout_marginLeft="@dimen/normal_margin"
                android:background="@drawable/calcel_order_background" />
            <TextView
                android:id="@+id/tv_pay_order"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:text="立即付款"
                android:textSize="@dimen/title_textSize"
                android:textColor="@color/color_white"
                android:gravity="center"
                android:layout_marginLeft="@dimen/normal_margin"
                android:background="@drawable/my_order_pay_background" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
