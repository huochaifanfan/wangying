<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="102dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:paddingLeft="25dp"
    android:id="@+id/rel_content"
    android:background="@drawable/ticket_selected">

    <TextView
        android:id="@+id/tv_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥"
        android:textSize="@dimen/smasll_textSize"
        android:textColor="@color/main_red"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/tv_amount"/>
    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textSize="24sp"
        android:textColor="@color/main_red"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tv_sign" />
    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/smasll_textSize"
        android:textColor="@color/main_red"
        android:text="优惠券"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/tv_amount"
        android:layout_alignLeft="@+id/tv_amount" />
    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="网赢天下优惠券"
        android:textSize="@dimen/title_textSize"
        android:textColor="@color/black_color"
        android:layout_toRightOf="@+id/tv_amount"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="14dp" />
    <TextView
        android:id="@+id/text_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全场满1000元可用，全场满1000元可用"
        android:layout_toRightOf="@+id/tv_amount"
        android:layout_below="@+id/text_title"
        android:layout_alignLeft="@+id/text_title"
        android:layout_marginTop="@dimen/normal_margin"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginRight="20dp" />
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018.12.20过期"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="11dp"
        android:textSize="@dimen/smasll_textSize"
        android:textColor="@color/main_grey" />
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="已过期"
        android:visibility="gone"
        android:textSize="@dimen/smasll_textSize"
        android:textColor="@color/main_grey"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="11dp" />
</RelativeLayout>
