<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    android:orientation="vertical">

    <include layout="@layout/white_top_bar"/>
    <TextView style="@style/Text_divider"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/weichat_login"
            android:layout_marginRight="@dimen/normal_margin" />
        <ImageView
            android:layout_width="22dp"
            android:layout_height="11dp"
            android:src="@drawable/conbine"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/normal_margin" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/weichat_login_logo" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/large_margin"
        android:layout_marginRight="@dimen/large_margin"
        android:layout_marginTop="43dp"
        android:background="@drawable/linear_background">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="手机号码"
            android:textSize="@dimen/big_textSize"
            android:textColor="@color/black_color"
            android:gravity="center" />
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:textColor="@color/black_color"
            android:textSize="@dimen/big_textSize"
            android:textColorHint="@color/hint_color"
            android:background="@null"
            android:inputType="phone"
            android:maxLength="11"
            android:hint="请输入手机号码" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/large_margin"
        android:layout_marginRight="@dimen/large_margin"
        android:background="@drawable/linear_background">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="手机验证码"
            android:textSize="@dimen/big_textSize"
            android:textColor="@color/black_color"
            android:gravity="center" />
        <EditText
            android:id="@+id/et_msg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/normal_margin"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:textColor="@color/black_color"
            android:textSize="@dimen/big_textSize"
            android:textColorHint="@color/hint_color"
            android:background="@null"
            android:inputType="number"
            android:maxLength="6"
            android:hint="请输入验证码" />
        <TextView
            android:id="@+id/tv_getMsg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/big_textSize"
            android:textColor="@color/main_red"
            android:text="获取验证码"
            android:gravity="center" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/large_margin"
        android:text="绑定即视为同意《网赢天下注册协议》"
        android:textSize="@dimen/smasll_textSize"
        android:textColor="#8c8c8c"
        android:layout_marginTop="12dp" />
    <Button
        android:id="@+id/btn_sure"
        style="@style/button_style"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_login_grey"
        android:text="完成绑定" />
</LinearLayout>
