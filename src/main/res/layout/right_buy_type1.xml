<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white_color">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/caidai"/>
    <RelativeLayout
        android:id="@+id/rel_address"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:paddingLeft="20dp"
        android:paddingRight="@dimen/large_margin"
        android:background="#f9fafe">
        <ImageView
            android:id="@+id/image_address"
            android:layout_width="14dp"
            android:layout_height="20dp"
            android:src="@drawable/shop_address"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp" />
        <LinearLayout
            android:id="@+id/linear_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/image_address">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小明"
                android:textSize="@dimen/big_textSize"
                android:textColor="@color/black_color"
                android:layout_marginRight="16dp" />
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13409897865"
                android:layout_marginRight="10dp"
                android:textSize="@dimen/big_textSize"
                android:textColor="@color/black_color" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/min_margin"
                android:paddingRight="@dimen/min_margin"
                android:background="@drawable/address_default_background"
                android:text="默认"
                android:gravity="center"
                android:textSize="@dimen/smasll_textSize"
                android:textColor="@color/main_red" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal_textSize"
            android:textColor="@color/main_grey"
            android:text="北京市朝阳区慧he南街国粹苑1122"
            android:layout_toRightOf="@+id/image_address"
            android:layout_below="@+id/linear_name" />
        <TextView
            android:id="@+id/tv_addAddress"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/image_address"
            android:text="点击添加收货地址"
            android:visibility="gone"
            android:textSize="@dimen/normal_textSize"
            android:gravity="center_vertical" />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:src="@drawable/caidai"/>
</LinearLayout>
