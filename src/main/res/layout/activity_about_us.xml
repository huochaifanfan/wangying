<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/white_top_bar"/>
    <TextView style="@style/Text_divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:paddingBottom="50dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/image_log"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:src="@mipmap/icon" />
        <TextView
            android:id="@+id/tv_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="版本号：1.0.0"
            android:textSize="@dimen/title_textSize"
            android:textColor="@color/black_color"
            android:gravity="center"
            android:layout_marginTop="15dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="11dp"
        android:background="@color/color_white">
        <LinearLayout
            android:id="@+id/linear_guli"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/large_margin"
            android:paddingRight="@dimen/large_margin">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="给我鼓励"
                android:textSize="@dimen/title_textSize"
                android:textColor="@color/black_color"
                android:gravity="center_vertical" />
            <ImageView
                android:layout_width="9dp"
                android:layout_height="17dp"
                android:src="@drawable/black_more_info"
                android:layout_gravity="center" />
        </LinearLayout>
        <TextView style="@style/Text_divider"
            android:layout_marginLeft="@dimen/large_margin"/>
        <!--意见反馈-->
        <LinearLayout
            android:id="@+id/linear_suggestion"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal"
            android:paddingRight="@dimen/large_margin"
            android:paddingLeft="@dimen/large_margin">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="意见反馈"
                android:textSize="@dimen/title_textSize"
                android:textColor="@color/black_color"
                android:gravity="center_vertical" />
            <ImageView
                android:layout_width="9dp"
                android:layout_height="17dp"
                android:src="@drawable/black_more_info"
                android:layout_gravity="center" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
