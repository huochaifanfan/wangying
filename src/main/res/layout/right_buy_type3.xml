<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#f8f8f8">
    <!--优惠券-->
    <LinearLayout
        android:id="@+id/linear_yunfei"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/right_buy_linear"
        android:paddingLeft="@dimen/large_margin"
        android:paddingRight="@dimen/large_margin">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="14dp"
            android:src="@drawable/right_buy_wuliu"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/normal_margin" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="运费"
            android:textSize="@dimen/big_textSize"
            android:textColor="#333333"
            android:gravity="center_vertical" />
        <TextView
            android:id="@+id/tv_yunfei_amount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="￥10.00"
            android:textSize="@dimen/big_textSize"
            android:textColor="#333333"
            android:gravity="center" />
    </LinearLayout>
    <!--发票-->
    <LinearLayout
        android:id="@+id/linear_fapiao"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/right_buy_linear"
        android:paddingLeft="@dimen/large_margin"
        android:paddingRight="@dimen/large_margin">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/fapiao"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/normal_margin" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="发票"
            android:textSize="@dimen/big_textSize"
            android:textColor="#333333"
            android:gravity="center_vertical" />
        <TextView
            android:id="@+id/tv_fapiao"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="不开发票"
            android:textSize="@dimen/big_textSize"
            android:textColor="#333333"
            android:gravity="center" />
        <ImageView
            android:layout_width="8dp"
            android:layout_height="15dp"
            android:src="@drawable/black_more_info"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/normal_margin" />
    </LinearLayout>
    <!--微信支付-->
    <LinearLayout
        android:id="@+id/linear_weichat_pay"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/right_buy_linear"
        android:paddingLeft="@dimen/large_margin"
        android:paddingRight="@dimen/large_margin">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/weichat_pay"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/min_margin" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="微信支付"
            android:textSize="@dimen/big_textSize"
            android:textColor="#333333"
            android:gravity="center_vertical" />
        <ImageView
            android:id="@+id/image_weichat"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circel_select"
            android:layout_gravity="center" />
    </LinearLayout>
    <!--其他说明-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingLeft="@dimen/large_margin">
        <ImageView
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@drawable/other"
            android:layout_marginRight="@dimen/normal_margin" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他说明"
            android:textSize="@dimen/big_textSize"
            android:textColor="#333333"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
    <EditText
        android:id="@+id/et_other_say"
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:background="@null"
        android:paddingTop="@dimen/normal_margin"
        android:paddingLeft="46dp"
        android:paddingBottom="@dimen/normal_margin"
        android:hint="有什么想对卖家说的，可以写在这里哦"
        android:textSize="@dimen/big_textSize"
        android:textColor="#333333"
        android:textColorHint="@color/main_grey"
        android:gravity="top" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="如要加工定制，请电联010-7363848"
        android:textSize="@dimen/smasll_textSize"
        android:textColor="@color/main_red"
        android:gravity="center" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="65dp" />
</LinearLayout>
